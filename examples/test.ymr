target JavaScript;

use env;

use cors(
	origin: @env.ALLOWED_ORIGIN
);

router /api 
    as apiRouter
    header (
        X-API-Key: string
    )
{
    GET /hello?name=string
        as HelloRoute

    POST /person
        as CreatePerson
        body (
            name: string,
            age: int
        )

    include "include.ymr"
}